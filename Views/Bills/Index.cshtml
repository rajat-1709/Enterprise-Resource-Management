@model IEnumerable<demoerpnxt.Models.Bill>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buyersname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buydate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Itemsname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Itemsquant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sellersname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totalamount)
